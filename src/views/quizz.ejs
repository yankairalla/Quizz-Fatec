<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="css/quizz.css">
<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">

</head>

<body>
    <div class="navbar-header">
        <a href="/"><img class="imglogo" src="imagens/logo_fatec.png"></a>

    </div>
    <div class="content">
        <h1 class="main-title">Question√°rio Fatec</h1> 
    <form id="form" method="POST" action="/quizz">
        <div id="context">
            <% questionary.map((question, index) => { %>
                <h2 class="title"><%=question.title%></h2>
                <hr>
                <% question.answers.map((answer) => { %>
                    <div class="box-question">
                        <input class="radio" type="radio" value="<%=answer.course %>" id="<%=answer.course %>" name="question_<%=index%>">
                        <label for="<%=answer.course %>"><%=answer.answer_text %></label>
                    </div>
                    <% }) %>    
            <% }) %>
        </div>
        <button id="submit" type="submit" class="btn btn-submit">Ver Resultado</button>
    </form>
    </div>



<%- include('includes/end.ejs') %>
